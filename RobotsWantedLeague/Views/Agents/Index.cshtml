@model List<Agent>

@{
  ViewData["Title"] = "Agent List";
}

<h1 style="text-align: center;">LISTE DES AGENTS</h1>

<div style="margin-bottom: 20px; margin-top: 8%;">
  <ul class="list-group" style="width: 20%; margin: 0 auto; text-align: center;">
    @foreach (Agent agent in Model)
    {
      <li class="list-group-item">
        <a href="/agents/agent?id=@agent.Id">@agent.Name</a>
      </li>
    }
  </ul>
</div>

<div class="text-center">
  <a class="btn btn-primary mt-2" href="/agents/createAgent">Ajouter un Agent</a>
</div>
